      var rand = Math.floor((Math.random()*32)+1);
      var temp = rand;
      isOver = false;
      function newJoke(joke)
      {
        document.querySelector("#newJoke").innerText = "Fetch me another joke!"
        if (rand<31){
          if(isOver == false){
            document.querySelector("#joke").innerText = joke[rand]
